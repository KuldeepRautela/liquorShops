<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorHangover"
    android:layout_height="match_parent"
  >
<TextView
    android:layout_width="wrap_content"
    android:textSize="@dimen/dimen_text_big_24"
    android:textStyle="bold"
    android:textColor="@color/colorTextWhite"
    android:padding="@dimen/dimen_padding_small_6"
    android:text="@string/string_text_hangover"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"
    tools:ignore="HardcodedText" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/colorTextWhite"
            android:padding="@dimen/dimen_padding_small_6"
            android:textSize="@dimen/dimen_text_small_medium_16"
            android:layout_height="wrap_content"
            android:text="@string/string_text_health_hangover_details"
            />
    </ScrollView>

</LinearLayout>