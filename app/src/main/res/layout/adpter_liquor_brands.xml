<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_padding_small_6">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dimen_layout_width_zero"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/dimen_padding_small_6"
        app:cardCornerRadius="@dimen/dimen_adapter_liquor_types_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLiquorBrandBackground"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/id_image_brand"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_adapter_liquor_brands_img_height"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/id_text_brand_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/dimen_padding_small_6"
                android:textSize="@dimen/dimen_text_big_24" />

            <TextView
                android:id="@+id/id_text_brand_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_padding_small_6"
                android:textSize="@dimen/dimen_text_small_medium_16" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>