<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen_margin_large_12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAdvisor"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_adapter_text_ques"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dimen_padding_small_6"
                android:textColor="@color/colorTextWhite"
                android:textSize="@dimen/dimen_text_medium_18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/dimen_padding_small_6">

                <TextView
                    android:id="@+id/id_text_ans_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dime_margin_small_6"
                    android:background="@drawable/ic_rect_stroke_text_view_border"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/dimen_padding_medium_8"
                    android:textColor="@color/colorTextWhite" />

                <TextView
                    android:id="@+id/id_text_ans_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dime_margin_small_6"
                    android:background="@drawable/ic_rect_stroke_text_view_border"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/dimen_padding_medium_8"
                    android:textColor="@color/colorTextWhite" />

                <TextView
                    android:id="@+id/id_text_ans_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dime_margin_small_6"
                    android:background="@drawable/ic_rect_stroke_text_view_border"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/dimen_padding_medium_8"
                    android:textColor="@color/colorTextWhite" />

                <TextView
                    android:id="@+id/id_text_ans_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dime_margin_small_6"
                    android:background="@drawable/ic_rect_stroke_text_view_border"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/dimen_padding_medium_8"
                    android:textColor="@color/colorTextWhite" />

                <TextView
                    android:id="@+id/id_text_ans_five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dime_margin_small_6"
                    android:background="@drawable/ic_rect_stroke_text_view_border"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/dimen_padding_medium_8"
                    android:textColor="@color/colorTextWhite" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>